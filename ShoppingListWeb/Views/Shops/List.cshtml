@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

<div class="card">
    <div class="card-header" style="display: table; width: 100%;">
        <div class="d-flex justify-content-between">
            <a href="@Url.Action("Index", new { controller = "Home" })" class="btn btn-secondary"><i class="fas fa-chevron-left"></i> Wstecz</a>
            <a href="@Url.Action("Add")" class="btn btn-success rounded"><i class="fa fa-plus-circle"></i> Dodaj listę zakupów</a>
        </div>
    </div>
    <div class="card-body">

        <div class="row">
            <div class="col-auto mr-auto">

                <h3>
                    Listy zakupów
                </h3>
            </div>
        </div>

        <br />  
        <div id="no-more-tables">
            <table class="table table-responsive-lg table-condensed cf" id="ModelList">
                <thead class="table-dark cf">
                    <tr>
                        <th class="text-center align-middle" scope="col">#</th>
                        <th class="align-middle" scope="col">Nazwa</th>
                        <th class="align-middle text-center" scope="col">Ilość przedmiotów</th>
                        <th class="align-middle text-center" scope="col">Data utworzenia</th>
                        <th class="align-middle text-center" scope="col">ID</th>
                        <th class="align-middle text-center" scope="col">Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th data-title="#" class="align-middle text-center" scope="row">1</th>
                        <td data-title="Nazwa" class="align-middle">Lewiatan</td>
                        <td data-title="Ilość przedmiotów" class="align-middle" id="textCenter">5</td>
                        <td data-title="Data utworzenia" class="align-middle" id="textCenter">16.08.2021 08:00:00</td>
                        <td data-title="Id" class="align-middle" id="textCenter">1</td>
                        <td data-title="Akcje" class="align-middle" id="textCenter">
                            <a class="btn btn-secondary"><i class="fas fa-info"></i> Szczegóły</a>
                            <a class="btn btn-primary"><i class="fas fa-edit"></i> Edycja</a>
                            <a class="btn btn-danger"><i class="fas fa-trash-alt"></i> Usuń</a>
                        </td>
                    </tr>
                    <tr>
                        <th data-title="#" class="align-middle text-center" scope="row">2</th>
                        <td data-title="Nazwa" class="align-middle">Żabka</td>
                        <td data-title="Ilość" class="align-middle" id="textCenter">3</td>
                        <td data-title="Data utworzenia" class="align-middle" id="textCenter">16.08.2021 08:00:00</td>
                        <td data-title="Id" class="align-middle" id="textCenter">1</td>
                        <td data-title="Akcje" class="align-middle" id="textCenter">
                            <a class="btn btn-secondary"><i class="fas fa-info"></i> Szczegóły</a>
                            <a class="btn btn-primary"><i class="fas fa-edit"></i> Edycja</a>
                            <a class="btn btn-danger"><i class="fas fa-trash-alt"></i> Usuń</a>
                        </td>
                    </tr>
                </tbody>
            </table>
            </div>
        </div>
    @*@if (ViewBag.Fullview)
    {
        <div class="card-footer">
            <button type="submit" name="action" value="approve" class="btn btn-success rounded">Zatwierdź zaznaczone</button>
        </div>
    }*@
</div>

<link rel="stylesheet" href="~/Content/DataTables/css/jquery.dataTables.css" />
<link rel="stylesheet" href="~/Content/Site.css" />

<script rel="JavaScript" type="text/javascript" src="~/Scripts/DataTables/jquery.dataTables.js"></script>

<script type="text/javascript">
    jQuery(function ($) {
        $(document).ready(function () {
            $('#ModelList').DataTable({
                "language": {
                    "url": "/Scripts/DataTables/Polish.json"
                },
                'aaSorting': []
            });
        });
    });
</script>

